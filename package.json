{
  "name": "n8n-owntracks-monorepo",
  "version": "1.0.0",
  "description": "Monorepo bridging OwnTracks & n8n - lightweight and easy to deploy",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules"
  },
  "keywords": [
    "owntracks",
    "n8n",
    "location",
    "tracking",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
